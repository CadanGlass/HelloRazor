@page
@model HelloRazor.Pages.IndexModel
@{
    ViewData["Title"] = "Home";  
}

<div class="text-center">
    <h1 class="display-4">Cadan Glass</h1>
    <form method="post">
        <div class="form-group">
            <label for="year">Year:</label><br>
            <input type="text" class="form-control" id="year" name="year" placeholder="Enter a year (e.g., 1990)">
            <br>
            <button type="submit" class="btn btn-primary">Get Zodiac</button>
            <button type="reset" class="btn btn-secondary">Clear</button>
        </div>
    </form>

    @if (Model.ZodiacSign != null)
    {
        <p class="zodiac-result">Your Zodiac Sign: @Model.ZodiacSign</p>
        <img src="/images/@($"{Model.ZodiacSign}.png")" alt="Zodiac Image">
    }
</div>
